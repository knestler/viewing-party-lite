<h1><center>Viewing Party Lite<center></h1>
<p><center>Register a New User<center> </p>


<%= form_with url: users_path, method: :post, local: :true do |f| %>
<p><%= f.label "Name:" %>
<%= f.text_field :name %></p>
<p><%= f.label "Email:" %>
<%= f.text_field :email %></p>
<p><%= f.label "Password:" %>
<%= f.password_field :password %></p>
<p><%= f.label "Confirm password:" %>
<%= f.password_field :password_confirmation %></p>
<p><%= f.submit "Create New User"%></p>
<%end%>
